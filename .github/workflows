name: Build and Push Docker Image

on:
  push:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # 1. Checkout the repo
      - name: Checkout code
        uses: actions/checkout@v3

      # 2. Set up JDK 17
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'temurin'

      # 3. Build the project with Maven (including wsimport + jar-with-dependencies)
      - name: Build JAR with Maven
        run: mvn clean package

      # 4. Check wsimport output (DEBUG step)
      - name: List wsimport generated classes
        run: find target/generated-sources/wsimport -name "*.java" || echo "No wsimport files found"

      # 5. Check JAR content to verify soap classes are included
      - name: List JAR contents
        run: unzip -l target/*-jar-with-dependencies.jar | grep soap || echo "No soap classes found"

      # 6. Build Docker image
      - name: Build Docker image
        run: docker build -t ghcr.io/${{ github.repository_owner }}/retrotrack-exporter .

      # 7. Log in to GitHub Container Registry
      - name: Log in to GHCR
        run: echo "${{ secrets.GITHUB_TOKEN }}" | docker login ghcr.io -u ${{ github.actor }} --password-stdin

      # 8. Push Docker image
      - name: Push Docker image
        run: docker push ghcr.io/${{ github.repository_owner }}/retrotrack-exporter
